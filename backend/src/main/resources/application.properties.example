# Server Configuration
server.port=8080
spring.application.name=ai-context-blog

# Database Configuration (MySQL)
# IMPORTANT: Replace with your actual database credentials
# For production, use environment variables: ${DATABASE_URL}, ${DB_USERNAME}, ${DB_PASSWORD}
spring.datasource.url=${DATABASE_URL:jdbc:mysql://localhost:3306/ai_context_blog?createDatabaseIfNotExist=true&useSSL=false&serverTimezone=UTC&allowPublicKeyRetrieval=true}
spring.datasource.driverClassName=com.mysql.cj.jdbc.Driver
spring.datasource.username=${DB_USERNAME:YOUR_DB_USERNAME}
spring.datasource.password=${DB_PASSWORD:YOUR_DB_PASSWORD}

# JPA Configuration
spring.jpa.database-platform=org.hibernate.dialect.MySQLDialect
spring.jpa.hibernate.ddl-auto=update
spring.jpa.show-sql=true
spring.jpa.properties.hibernate.format_sql=true
spring.jpa.properties.hibernate.dialect=org.hibernate.dialect.MySQLDialect

# Connection Pool Configuration
spring.datasource.hikari.maximum-pool-size=10
spring.datasource.hikari.minimum-idle=5
spring.datasource.hikari.connection-timeout=20000
spring.datasource.hikari.idle-timeout=300000

# JWT Configuration
# IMPORTANT: Generate a strong random secret key for production
# For production, use environment variable: ${JWT_SECRET}
jwt.secret=${JWT_SECRET:YOUR_JWT_SECRET_KEY_HERE}
# For production, use environment variable: ${JWT_EXPIRATION}
# Default value: 86400000 (24 hours in milliseconds)
jwt.expiration=${JWT_EXPIRATION:86400000}

# OpenRouter API Configuration
# IMPORTANT: Get your API key from https://openrouter.ai/keys
# NEVER commit your actual API key to version control!
# For production, use environment variable: ${OPENAI_API_KEY}
openai.api.key=${OPENAI_API_KEY:YOUR_OPENROUTER_API_KEY_HERE}
openai.api.base-url=https://openrouter.ai/api/v1

# CORS Configuration
# For production, use environment variable: ${FRONTEND_URL}
cors.allowed-origins=${FRONTEND_URL:http://localhost:3000}

# Disable H2 Console (using MySQL)
spring.h2.console.enabled=false

